<Window x:Class="WaterMarkedTextBoxTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="userInput" LostFocus="userInput_LostFocus" HorizontalAlignment="Left" Height="23" Margin="150,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="watermarkedTxt" GotFocus="watermarkedTxt_GotFocus" HorizontalAlignment="Left" Height="23" Margin="150,130,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
